<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.TelaNovoAlunoController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Novo Aluno" style="-fx-font-size: 20px;"/>

  <Label text="Nome:" />
  <TextField fx:id="nomeTextField" />

  <Label text="Email:" />
  <TextField fx:id="emailTextField" />

  <Button text="Salvar" onAction="#onSalvarButtonClick"/>

  <Label fx:id="mensagemLabel" />

</VBox>
